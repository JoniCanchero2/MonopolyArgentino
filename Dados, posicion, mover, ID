import random


class Monopoly():
    def __init__ (self):
        pass

class Jugador(Monopoly):
    contador_ids = 0
    def __init__(self, dinero=None, posicion = None, propiedades_compradas=None):
        self.__class__.contador_ids += 1

        self.id_jugador = self.__class__.contador_ids
        self.dinero = 1500
        self.posicion = 1
        self.propiedades_compradas = []
    

    def tirar_dados(self):
        dado1 = random.randint(1,6)
        print(f"Dado 1: {dado1}")
        dado2 = random.randint(1,6)
        print(f"Dado 2: {dado2}")
        resultado = dado1+dado2
        return resultado
    
    def mover_jugador(self):
        nueva_posicion = (self.posicion + (self.tirar_dados()))
        self.posicion = (self.posicion + (self.tirar_dados()))
        avanzo = nueva_posicion - self.posicion
        print(f"Avanzaste {avanzo}")
        print(f"Estas en la casilla {self.posicion}")

prueba = Jugador()
prueba.mover_jugador()
print(prueba.id_jugador)
prueba2 = Jugador()
print(prueba2.id_jugador)

